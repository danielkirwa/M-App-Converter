<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    android:background="#ffa07a"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="0"
        android:gravity="center|right"
        android:textColor="#E1131212"
        android:textStyle="bold"
        android:textSize="25sp"
        android:background="#ffffff"
       android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/btnopenconersion"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:onClick="CallConversion"
            android:text="Conversion"
            android:layout_margin="5dp"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        >
        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="AC"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textColor="#DD0D0D"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/power"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="^"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="DEL"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="/"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />


</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        >
        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="7"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="8"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="9"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="X"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />


    </LinearLayout>
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="4"
    >
    <Button
        android:id="@+id/four"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="4"
        android:onClick="ButtonClicked"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/five"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="5"
        android:onClick="ButtonClicked"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/six"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="6"
        android:onClick="ButtonClicked"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/sub"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="-"
        android:onClick="ButtonClicked"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textSize="30dp"
        />


</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        >
        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="3"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="2"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="1"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="+"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:layout_marginBottom="20dp"
        >
        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="0"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="."
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/answer"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="ANS"
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="="
            android:onClick="ButtonClicked"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30dp"
            />


    </LinearLayout>



</LinearLayout>